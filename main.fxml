<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<!-- The FXML file representing the graphical user interface layout for the MainGUI class. -->
<AnchorPane prefHeight="200.0" prefWidth="300.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MainGUI">

    <!-- Label for prompting the user to enter the file path -->
    <Label layoutX="20.0" layoutY="20.0" text="Введите путь к файлу:" />

    <!-- Text field for entering the file path -->
    <TextField fx:id="filePathTextField" layoutX="20.0" layoutY="50.0" prefWidth="260.0"
               onKeyPressed="#onFilePathTextFieldEnter" styleClass="error-text"/>

    <!-- Button for initiating the action -->
    <Button layoutX="120.0" layoutY="100.0" text="ОК" onAction="#onOKButtonClicked"
            minWidth="60" minHeight="30" />

    <!-- Label for displaying the selected file path -->
    <Label fx:id="pathLabel" layoutX="20.0" layoutY="80.0" />

</AnchorPane>

